<Window x:Class="Verbos_Irregulares_Inglés.TestWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Verbos_Irregulares_Inglés"
        mc:Ignorable="d"
        Title="Full test" Height="550" Width="800">

    <Grid x:Name="grdLayout" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="rowTestGame"/>
            <RowDefinition x:Name="rowTestButtons" Height="50"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            
        </Grid.Resources>
        <!--#region Test-->
        <Grid x:Name="grdGridTestPrincipal" VerticalAlignment="Center" HorizontalAlignment="Center" ShowGridLines="True" 
              Width="700" Height="300" Margin="0,35,0,35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource grid-header}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="175" Background="Bisque" FontWeight="Bold" TextAlignment="Center">CASTELLANO</TextBlock>
            <TextBlock Style="{StaticResource grid-header}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="175" Background="GreenYellow" FontWeight="Bold" Grid.Column="1" TextAlignment="Center">PRESENTE</TextBlock>
            <TextBlock Style="{StaticResource grid-header}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="175" Background="LightSkyBlue" FontWeight="Bold" Grid.Column="2" TextAlignment="Center">PASADO</TextBlock>
            <TextBlock Style="{StaticResource grid-header}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="175" Background="PaleVioletRed" FontWeight="Bold" Grid.Column="3" TextAlignment="Center">PARTICIPIO</TextBlock>
        </Grid>
        <Grid x:Name="grdButtons" Grid.Row="1" VerticalAlignment="Center" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnComprobar" Style="{StaticResource btn-left}" Grid.Column="1" Width="Auto" Height="50" Click="ComprobarVerbos" Content="Comprobar" HorizontalContentAlignment="Center" VerticalAlignment="Stretch"/>
            <Button x:Name="btnVolverJugar" Style="{StaticResource btn-right}" Grid.Column="3" Width="Auto" Height="50" Click="VolverJugar" Content="Volver a jugar" HorizontalContentAlignment="Center"/>
            <Button x:Name="btnHome" Style="{StaticResource btn-home}" Grid.Column="5" Height="50" HorizontalContentAlignment="Center" Click="btnHome_Click">
                <Image x:Name="imgBtnHome" Source="Recursos/home.png"/>
            </Button>
        </Grid>
        <!--#endregion-->
    </Grid>
</Window>
