<Window x:Class="Verbos_Irregulares_Inglés.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Verbos_Irregulares_Inglés"
        mc:Ignorable="d"
        Title="Verbos Irregulares Inglés" Height="550" Width="800">
    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="550" Width="800">
        <!--#region Intro-->
        <Grid x:Name="grdGridIntroPrincipal" VerticalAlignment="Center" HorizontalAlignment="Center" ShowGridLines="True" Width="700" Height="300" Margin="0,125,0,0">
            <TextBlock x:Name="txtMainIntro" HorizontalAlignment="Center" TextWrapping="Wrap" Text="English irregular verbs!" VerticalAlignment="Top" FontSize="48" FontWeight="Bold" FontFamily="Ink Free"/>
            <Button x:Name="btnIntroPlay" Style="{StaticResource btn-left}" Content="Play" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="125,0,0,50" Click="btnIntroPlay_Click"/>
            <Button x:Name="btnIntroTest" Style="{StaticResource btn-right}" Content="Test" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,125,50" Click="btnIntroTest_Click"/>
        </Grid>
        <!--#endregion-->
    </StackPanel>
</Window>
